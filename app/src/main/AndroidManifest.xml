<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.adotdamo.android.flashcards"
          xmlns:android="http://schemas.android.com/apk/res/android">

   <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@drawable/notes2"
        android:label="@string/app_name"
        android:versionCode="2"
        android:versionName="FLASHCARDS 2"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateQuestions"
            android:label="@string/title_activity_making_flash_cards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Study"
            android:label="@string/title_activity_flash_cards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".FlashCardList"
            android:label="@string/title_activity_edit_flash_cards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".DeckTitle"
            android:label="@string/title_activity_title__creation"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".QuestionList"
            android:label="@string/title_activity_edit_questions"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Test"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EditFlashCard"
            android:label="@string/edit_flashcards"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
